<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  <RadioGroup
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">
    <RadioButton android:id="@+id/radio_market"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="market" />
    <RadioButton android:id="@+id/radio_services"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="services" />
  </RadioGroup>
  <TextView
        android:id="@+id/txtCshRegNum"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/EditTextStyle"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="25dp"
        android:paddingLeft="10dp"
        android:hint="Cash Register Number"
        android:textColor="#000" />
  <TextView
        android:id="@+id/txtRcpNum"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/EditTextStyle"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="25dp"
        android:paddingLeft="10dp"
        android:hint="Receipt Number"
        android:textColor="#000" />
  <TextView
        android:id="@+id/txtDate"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/EditTextStyle"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="25dp"
        android:paddingLeft="10dp"
        android:hint="Date"
        android:textColor="#000" />
  <EditText
        android:id="@+id/txtNumber"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/EditTextStyle"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="25dp"
        android:paddingLeft="10dp"
        android:hint="PhoneNumber"
        android:textColor="#000" />
    <Button
        android:id="@+id/btnLotterySubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit" />
    <TextView
        android:id="@+id/txtError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>